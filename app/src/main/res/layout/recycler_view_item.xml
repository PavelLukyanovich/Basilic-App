<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="#d3e5db">

    <ImageView
        android:id="@+id/itemImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        tools:srcCompat="@drawable/bouquet1" />

    <TextView
        android:id="@+id/nameItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_toRightOf="@+id/itemImageView"
        android:layout_margin="4dp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="italic">

    </TextView>

    <TextView
        android:id="@+id/shortDescriptionItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Short Description"
        android:layout_below="@+id/nameItemTextView"
        android:layout_toRightOf="@+id/itemImageView"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        android:textStyle="normal">

    </TextView>

</RelativeLayout>

</androidx.cardview.widget.CardView>